        <item name="colorPrimary">#FAF6F6</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">#FAF6F6</item>
        <!-- Secondary brand color. -->

        <item name="colorOnSecondary">#FAF6F6</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#00000000</item>
